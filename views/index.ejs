<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>Available Products</title>
</head>
<body class="bg-gray-100">

  <!-- Header -->
  <header class="bg-blue-500 text-white py-4">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">My E-Commerce</h1>
      <nav>
        <a href="/products" class="text-white px-4 hover:underline">Home</a>
        <a href="/cart" class="text-white px-4 hover:underline">Cart (<%= cartCount %>)</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto py-8">
    <h2 class="text-3xl font-bold mb-6">Available Products</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% products.forEach(product => { %>
        <div class="border rounded p-4 bg-white">
          <!-- Product Image with alt dynamic and fallback -->
          <img src="<%= product.image || '/path/to/default/image.jpg' %>" alt="<%= product.name %>" class="w-full h-40 object-cover rounded-md mb-4" loading="lazy">
          <h2 class="text-xl font-bold"><%= product.name %></h2>
          <p class="text-gray-700">$<%= product.price %></p>
          <form action="/cart/add" method="POST" class="mt-4">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <!-- Quantity Input -->
            <label for="quantity" class="block text-sm text-gray-700 mt-2">Quantity</label>
            <input type="number" name="quantity" min="1" value="1" class="border rounded p-2 w-full mt-1" required>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 mt-2 w-full">Add to Cart</button>
          </form>
        </div>
      <% }); %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white text-center py-4">
    <p>&copy; <%= new Date().getFullYear() %> My E-Commerce. All rights reserved.</p>
  </footer>

</body>
</html>
